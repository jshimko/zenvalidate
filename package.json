{
  "name": "zenvalidate-monorepo",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo run build && pnpm readme:sync",
    "clean": "./scripts/clean-all.sh",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,md}\"",
    "test": "turbo run test",
    "tsc:check": "turbo run tsc:check",
    "checks": "pnpm build && pnpm lint && pnpm tsc:check && pnpm test",
    "checks:full": "pnpm clean && pnpm i && pnpm checks",
    "readme:sync": "cp README.md packages/zenvalidate/README.md",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "deps:check": "./scripts/updateAllDeps.sh ncu",
    "deps:update": "./scripts/updateAllDeps.sh",
    "deps:update:major": "./scripts/updateAllDeps.sh"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/prettier-config": "workspace:*",
    "eslint": "9.39.1",
    "prettier": "3.6.2",
    "turbo": "2.6.0",
    "typescript": "5.9.3"
  },
  "prettier": "@workspace/prettier-config",
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "24.11.0",
      "onFail": "download"
    }
  },
  "workspaces": [
    "apps/*",
    "examples/*",
    "packages/*"
  ]
}
