{
  "name": "zenvalidate-monorepo",
  "private": true,
  "author": "Jeremy Shimko <hey@jshimko.dev>",
  "description": "Environment variable parsing and validation with Zod that provides a type-safe runtime env API in any Node.js and browser environments.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jshimko/zenvalidate.git"
  },
  "bugs": {
    "url": "https://github.com/jshimko/zenvalidate/issues"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo run build && pnpm readme:sync",
    "clean": "./scripts/clean-all.sh",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,md}\"",
    "test": "turbo run test",
    "tsc:check": "turbo run tsc:check",
    "checks": "pnpm build && pnpm lint && pnpm tsc:check && pnpm test",
    "checks:full": "pnpm clean && pnpm i && pnpm checks",
    "readme:sync": "cp README.md packages/zenvalidate/README.md",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "deps:check": "./scripts/updateAllDeps.sh ncu -t minor",
    "deps:update": "./scripts/updateAllDeps.sh",
    "deps:check:major": "./scripts/updateAllDeps.sh ncu",
    "deps:update:major": "./scripts/updateAllDeps.sh ncu -u"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@trivago/prettier-plugin-sort-imports": "6.0.0",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/prettier-config": "workspace:*",
    "eslint": "9.39.1",
    "prettier": "3.7.4",
    "turbo": "2.6.3",
    "typescript": "5.9.3"
  },
  "prettier": "@workspace/prettier-config",
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "^24.11.0",
      "onFail": "download"
    }
  },
  "workspaces": [
    "apps/*",
    "examples/*",
    "packages/*"
  ]
}
