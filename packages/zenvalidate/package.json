{
  "name": "zenvalidate",
  "version": "1.3.0",
  "public": true,
  "license": "MIT",
  "type": "module",
  "author": "Jeremy Shimko <hey@jshimko.dev>",
  "description": "Environment variable parsing and validation with Zod that provides a type-safe runtime env API in any Node.js and browser environments.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jshimko/zenvalidate.git"
  },
  "bugs": {
    "url": "https://github.com/jshimko/zenvalidate/issues"
  },
  "scripts": {
    "build": "zshy",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "tsc": "tsc",
    "tsc:check": "tsc --noEmit"
  },
  "keywords": [
    "typescript",
    "schema",
    "environment",
    "env",
    "dotenv",
    "validation",
    "type",
    "inference",
    "zod"
  ],
  "devDependencies": {
    "@types/node": "25.0.9",
    "@vitest/coverage-v8": "4.0.17",
    "@vitest/ui": "4.0.17",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/prettier-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "tsd": "0.33.0",
    "typescript": "5.9.3",
    "vitest": "4.0.17",
    "zod": "4.3.5",
    "zshy": "0.7.0"
  },
  "peerDependencies": {
    "zod": "^4"
  },
  "prettier": "@workspace/prettier-config",
  "zshy": {
    "exports": {
      ".": "./src/index.ts",
      "./types": "./src/types.ts",
      "./validators": "./src/validators.ts"
    }
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "types": "./dist/index.d.cts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./types": {
      "types": "./dist/types.d.cts",
      "import": "./dist/types.js",
      "require": "./dist/types.cjs"
    },
    "./validators": {
      "types": "./dist/validators.d.cts",
      "import": "./dist/validators.js",
      "require": "./dist/validators.cjs"
    }
  }
}
